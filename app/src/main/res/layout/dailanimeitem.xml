<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="150dp"
    xmlns:tools="http://schemas.android.com/tools">
    <ImageView
        android:id="@+id/anime_image"
        android:layout_width="200sp"
        android:layout_height="200sp"
        android:contentDescription="@string/animeimage"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        />
    <Switch
        android:id="@+id/switch1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:switchMinWidth="56dp"
        android:layout_marginTop="50dp"
        android:layout_marginStart="35sp"
        app:layout_constraintStart_toEndOf="@id/anime_image"
        app:layout_constraintStart_toStartOf="@id/switch_image"
        app:layout_constraintTop_toTopOf="@id/anime_name"
        android:checked="false"
        android:textOff="OFF"
        android:textOn="ON"/>
    <ImageView
        android:id="@+id/switch_image"
        android:layout_width="30sp"
        android:layout_height="30sp"
        android:layout_marginTop="32sp"
        android:layout_marginStart="50sp"
        android:background="@drawable/coeur"
        android:contentDescription="@string/coeur"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toEndOf="@id/anime_image"
        app:layout_constraintTop_toTopOf="@id/anime_name"
        />
    <TextView
        android:id="@+id/anime_name"
        android:layout_width="200sp"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toEndOf="@id/anime_image"
        tools:text="Anime"
        android:textAlignment="center"
        />


</androidx.constraintlayout.widget.ConstraintLayout>